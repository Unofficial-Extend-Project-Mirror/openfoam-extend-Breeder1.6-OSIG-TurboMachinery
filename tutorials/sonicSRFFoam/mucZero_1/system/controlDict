FoamFile
{
    version         2.0;
    format          ascii;
    class           dictionary;
    object          controlDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     sonicSRFFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         0.1;

deltaT          1e-07;

writeControl    adjustableRunTime;

writeInterval   0.001;

purgeWrite      10;

writeFormat     ascii;

writePrecision  6;

writeCompression compressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

// Automatic adjustment of time step?
adjustTimeStep  yes;

// maxCo
maxCo           0.3;

maxDeltaT       0.00001;

